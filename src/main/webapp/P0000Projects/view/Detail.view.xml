<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
          sId="Detail"
          xmlns="sap.m" controllerName="sap.ui.demo.basicTemplate.controller.Detail">
    <Page id="detailPage">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button press=".onBack" tooltip="Back" icon="sap-icon://nav-back"/>
                    <Image src="images/GreenTrakLogo.svg" height="30px"/>
                </contentLeft>
                <contentMiddle>
                    <Label id="header" design="Bold" text="{i18n>title}"/>
                </contentMiddle>
                <contentRight>
                    <OverflowToolbar id="otbFooter">
                        <ToolbarSpacer/>
                        <OverflowToolbarButton text="Edit" icon="sap-icon://edit" press="onEdit"/>
                        <OverflowToolbarButton text="Delete" icon="sap-icon://delete" press=".onDelete"/>
                    </OverflowToolbar>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <IconTabBar id="empIconTabBar" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter key="personal" text="Project Info" icon="sap-icon://project-definition-triangle">
                        <VBox class="sapUiSmallMargin">
                            <f:SimpleForm id="personalForm" editable="false" layout="ResponsiveGridLayout"
                                          title="Project Info" labelSpanXL="4" labelSpanL="3"
                                          labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
                                          emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2"
                                          columnsL="1" columnsM="1" singleContainerFullSize="false">
                                <f:content>
                                    <Label design="Bold" text="Project Owner"/>
                                    <Text text="{ProjOwner}"/>
                                    <Label design="Bold" text="Project Code"/>
                                    <Text text="{ProjectCode}"/>
                                    <Label design="Bold" text="Project Name"/>
                                    <Text text="{ProjectName}"/>
                                    <Label design="Bold" text="Start date"/>
                                    <Text text="{StartDate}"/>
                                    <Label design="Bold" text="Description"/>
                                    <Text text="{Description}"/>
                                </f:content>
                            </f:SimpleForm>
                        </VBox>
                    </IconTabFilter>
                    <IconTabFilter key="contact" text="Project members" icon="sap-icon://collaborate">
                        <Table id="emptable"
                               alternateRowColors="true"
                               growing="true"
                               growingThreshold="5"
                               includeItemInSelection="false"
                               items="{ path: '/ProjMembers',
						parameters: {$select:'Nickname,FullName,Gender,UserName',
						$count: true, $$updateGroupId : 'UserGroup' } }"
                               mode="SingleSelectLeft"
                               noDataText="No User found"
                               select=".onSelection"
                               updateFinished=".onUpdateFinished">
                            <items>
                                <ColumnListItem id="item0" type="Navigation" press="onItemPress">
                                    <cells>
                                        <Text text="{Nickname}"/>
                                        <Text text="{FullName}"/>
                                        <Text text="{Gender}"/>
                                        <Text text="{UserName}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                            <columns>
                                <Column id="column1">
                                    <header>
                                        <Label text="Nick name" id="label1"/>
                                    </header>
                                </Column>
                                <Column id="column2">
                                    <header>
                                        <Label text="Full name" id="label2"/>
                                    </header>
                                </Column>
                                <Column id="column3">
                                    <header>
                                        <Label text="Gender" id="label3"/>
                                    </header>
                                </Column>
                                <Column id="column4">
                                    <header>
                                        <Label text="User Name" id="label4"/>
                                    </header>
                                </Column>
                            </columns>
                            <headerToolbar>
                                <OverflowToolbar width="100%" id="toolbar1">
                                    <content>
                                        <Title text="{i18n>overflowToolbarTitle} ({appView>/listItemCount})" level="H2"/>
                                        <ToolbarSpacer/>
                                        <SearchField id="searchField" width="20%" placeholder="Search" search=".onSearch"/>
                                        <Button id="refreshEmployeeButton" icon="sap-icon://refresh"
                                                tooltip="Refresh table"
                                                press="onRefreshPress"/>
                                        <Button id="addEmployeeButton" icon="sap-icon://add" tooltip="Create" press="onCreate">
                                            <layoutData>
                                                <OverflowToolbarLayoutData priority="NeverOverflow"/>
                                            </layoutData>
                                        </Button>
                                        <Button id="deleteButton" tooltip="Delete" class="deleteButton"
                                                icon="sap-icon://delete"
                                                press=".onDelete" enabled="false"/>
                                        <Button id="sortUsersButton" press="onSort" tooltip="Sort" icon="sap-icon://sort"/>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                        </Table>
                        <VBox class="sapUiSmallMargin">
                            <!--<f:SimpleForm id="contactForm" editable="false" layout="ResponsiveGridLayout"
                                          title="Contact Info" labelSpanXL="4" labelSpanL="3"
                                          labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
                                          emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2"
                                          columnsL="1" columnsM="1" singleContainerFullSize="false">
                                <f:content>
                                    <Label design="Bold" text="User Email ID"/>
                                    <Text text="{PrivateEmail}"/>
                                    <Label design="Bold" text="Business Email ID"/>
                                    <Text text="{BusinessEmail}"/>
                                    <Label design="Bold" text="User Mobile Phone Nr"/>
                                    <Text text="{path:'MobilePhone'}"/>
                                    <Label design="Bold" text="User Landline Phone Nr"/>
                                    <Text text="{path:'LandlinePhone'}"/>
                                </f:content>
                            </f:SimpleForm>-->
                        </VBox>
                    </IconTabFilter>
                    <!--<IconTabFilter key="account" text="Account Info" icon="sap-icon://account">
                        <VBox class="sapUiSmallMargin">
                            <f:SimpleForm id="accountForm" editable="false" layout="ResponsiveGridLayout"
                                          title="Account Info" labelSpanXL="4" labelSpanL="3"
                                          labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
                                          emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2"
                                          columnsL="1" columnsM="1" singleContainerFullSize="false">
                                <f:content>
                                    <Label design="Bold" text="User Name"/>
                                    &lt;!&ndash;<Text id="empId" text="{path:'ID',formatter:'.formatNumber'}"/>&ndash;&gt;
                                    <Text text="{UserName}"/>

                                    <Label design="Bold" text="System Role"/>
                                    <Text text="OrdinaryUser"/>
                                    &lt;!&ndash;<Text text="{SystemRole}"/>&ndash;&gt;
                                    <Label design="Bold" text="Job Function"/>
                                    <Text text="{JobFunction}"/>
                                </f:content>
                            </f:SimpleForm>
                        </VBox>
                    </IconTabFilter>-->
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>