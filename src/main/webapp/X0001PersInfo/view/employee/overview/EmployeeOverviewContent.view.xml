<mvc:View
	controllerName="sap.ui.demo.nav.controller.employee.overview.EmployeeOverviewContent"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Table id="employeesTable"
		items="{/Users}"
		itemPress=".onItemPressed">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>Employees} content" level="H2"/>
				<ToolbarSpacer />
				<SearchField id="searchField" search=".onSearchEmployeesTable" width="50%"/>
				<Button icon="sap-icon://sort" press=".onSortButtonPressed"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column id="employeeIDCol"><Text text="ID"/></Column>
			<Column id="firstNameCol" demandPopin="true"><Text text="{i18n>formFirstName}"/></Column>
			<Column id="lastNameCol" demandPopin="true"><Text text="{i18n>formFirstName}"/></Column>
			<Column id="addressCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>formFirstName}"/></Column>
			<Column id="cityCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>formFirstName}"/></Column>
			<Column id="regionCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>formCity}"/></Column>
			<Column id="postalCodeCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>formPostalCode}"/></Column>
			<Column id="countryCol" minScreenWidth="Tablet" demandPopin="true"><Text text="{i18n>formCountry}"/></Column>
			<Column id="homePhoneCol" minScreenWidth="Tablet" demandPopin="true" hAlign="Right"><Text text="{i18n>formFirstName}"/></Column>
		</columns>
		<items>
			<ColumnListItem type="Active">
				<cells>
					<Text text="{ID}"/>
					<Text text="{FullName}"/>
					<Text text="{UserName}"/>
					<Text text="{JobFunction}"/>
					<Text text="{SystemRole}"/>
					<Text text="{PostalCity}"/>
					<Text text="{PostalCode}"/>
					<Text text="{Nationality}"/>
					<Text text="{PrivateEmail}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>